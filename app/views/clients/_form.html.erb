
<%= errors_for @client %>

<%= form_for @client do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :delivery_item %>
    <%= f.text_field :delivery_item, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :estimated_delivery_time %>
    <%= f.text_field :estimated_delivery_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.fields_for :address do |ff| %>
      <%= render partial:'partials/address_form', locals:{f: ff} %>
    <% end %>
  </div>

  <%= f.submit class: "btn btn-lg btn-primary btn-block" %>

<% end %>
