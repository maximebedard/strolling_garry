
<div class="row form-group">
  <div class="col-sm-2">
    <%= f.text_field :number,
    placeholder: '#', class: 'form-control col-sm-2' %>
  </div>
  <div class="col-sm-10">
    <%= f.text_field :street,
    placeholder: 'Street', class: 'form-control col-sm-10' %>
  </div>
</div>
<div class="row form-group">
  <div class="col-sm-6">
    <%= f.text_field :city,
    placeholder: 'City', class: 'form-control' %>
  </div>

  <div class="col-sm-6">
    <%= f.text_field :province,
    placeholder: 'Province/State', class: 'form-control' %>
  </div>

</div>
<div class="row form-group">
  <div class="col-sm-6">
    <%= f.text_field :country,
    placeholder: 'Country', class: 'form-control' %>
  </div>

  <div class="col-sm-6">
    <%= f.text_field :postal_code,
    placeholder: 'Postal code/Zip code', class: 'form-control' %>
  </div>
</div>
